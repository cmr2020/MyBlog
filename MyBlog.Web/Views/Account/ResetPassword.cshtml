@model MyBlog.Core.DTOs.ResetPasswordViewModel
@{
    ViewData["Title"] = "بازیابی کلمه عبور";
}

<div class="col-lg-12">
    <div class="breadcrumb-trail breadcrumbs">
        <ul class="trail-items breadcrumb">
            <li class="trail-item trail-begin">
                <a href="/">خانه</a>
            </li>
            <li class="trail-item trail-end active">
                بازیابی کلمه عبور
            </li>
        </ul>
    </div>
</div>


<main class="client-page">
    <div class="container-content">

        <header><h2> بازیابی کلمه عبور </h2></header>

        <div class="form-layer">

            <form asp-action="ResetPassword" method="post">

                <input type="hidden" asp-for="ActiveCode" />

                <p class="form-row form-row-wide">
                    <label class="text">رمز عبور</label>
                    <input asp-for="Password" title="email" type="password" class="input-text">
                </p>
                <span asp-validation-for="Password"></span>

                <p class="form-row form-row-wide">
                    <label class="text">تکرار رمز عبور </label>
                    <input asp-for="RePassword" title="email" type="password" class="input-text">
                </p>
                <span asp-validation-for="RePassword"></span>


                <div asp-validation-summary="All" class="text-danger">

                </div>
                <p class="form-row">
                    <input type="submit" class="button-submit" value="ثبت تغییرات">
                </p>

            </form>
        </div>

    </div>
</main>