@model MyBlog.Core.DTOs.RegisterViewModel
@{
    ViewData["Title"] = "ثبت نام";
}


<div class="col-lg-12">
    <div class="breadcrumb-trail breadcrumbs">
        <ul class="trail-items breadcrumb">
            <li class="trail-item trail-begin">
                <a href="/">خانه</a>
            </li>
            <li class="trail-item trail-end active">
                عضویت در سایت
            </li>
        </ul>
    </div>
</div>


<div class="content-area col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="site-main">
        <h3 class="custom_blog_title">
            احراز هویت
        </h3>
        <div class="customer_login">
            <div class="row">
            
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="login-item">
                        <h5 class="title-login">حساب ندارید؟ هم اکنون ثبت نام کنید!</h5>
                        <form class="register" asp-action="Register" method="post">
                            <p class="form-row form-row-wide">
                                <label class="text">ایمیل</label>
                                <input asp-for="Email" title="email" type="email" class="input-text">
                            </p>
                            <p class="form-row form-row-wide">
                                <label class="text">نام کاربری</label>
                                <input asp-for="UserName" title="name" type="text" class="input-text">
                            </p>
                            <p class="form-row form-row-wide">
                                <label class="text">پسورد</label>
                                <input asp-for="Password" title="pass" type="password" class="input-text">
                            </p>
                            <p class="form-row form-row-wide">
                                <label class="text">تکرار پسورد</label>
                                <input asp-for="RePassword" title="pass" type="password" class="input-text">
                            </p>
                            <div asp-validation-summary="All" class="text-danger">

                            </div>
                            <p class="">
                                <input type="submit" class="button-submit" value="ثبت نام">
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


