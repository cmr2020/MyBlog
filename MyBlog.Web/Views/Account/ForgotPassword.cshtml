@model MyBlog.Core.DTOs.ForgotPasswordViewModel
@{
    ViewData["Title"] = "بازیابی کلمه عبور";
}

<div class="col-lg-12">
    <div class="breadcrumb-trail breadcrumbs">
        <ul class="trail-items breadcrumb">
            <li class="trail-item trail-begin">
                <a href="/">خانه</a>
            </li>
            <li class="trail-item trail-end active">
                ورود در سایت
            </li>
        </ul>
    </div>
</div>
<main class="client-page">
    <div class="container-content">
        @if (ViewBag.IsSuccess != null)
        {
            <div class="alert alert-success">
                <p class="help-block">ایمیل بازیابی کلمه عبور برای شما ارسال شد</p>
            </div>


        }
        <header><h2> بازیابی کلمه عبور </h2></header>

        <div class="form-layer">

            <form asp-action="ForgotPassword" method="post">

                <p class="form-row form-row-wide">
                    <label class="text">ایمیل</label>
                    <input asp-for="Email" title="email" type="text" class="input-text">
                </p>
                <span asp-validation-for="Email"></span>


                <p class="form-row">
                    <input type="submit" class="button-submit" value="تایید و ارسال">
                </p>

            </form>
        </div>

    </div>
</main>