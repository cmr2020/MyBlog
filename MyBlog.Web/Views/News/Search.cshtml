@model IEnumerable<MyBlog.DataLayer.Entities.Page.Page>
@{
    ViewData["Title"] = "جستجو";
}

<div class="row">
    <div class="content-area content-blog col-lg-9 col-md-8 col-sm-12 col-xs-12">
        <div class="site-main">
            <h3 class="custom_blog_title">
               نتیجه های یافت شده
            </h3>
            <div class="blog-list list-style">
                @foreach (var item in Model)
                {
                    <div class="blog-item">
                        <div class="post-format">
                            <a title="@item.PageTitle" href="#">
                                <img src="/PageImages/@item.ImageName" alt="@item.PageTitle" title="@item.PageTitle">
                            </a>
                        </div>
                        <div class="post-info">
                            <div class="category-blog">
                                @*<a href="#">@item.PageGroupTitle</a>*@
                            </div>
                            <h3 class="post-title">
                                <a title="@item.PageTitle" href="/News/@item.PageID">@item.PageTitle <span>[...]</span></a>
                            </h3>
                            <div class="main-info-post">
                                <p class="des">
                                    @item.ShortDescription
                                </p>
                            </div>
                            }
                            <div class="author-view">
                                <div class="author">
                                    <div class="avt">
                                        <img src="/assets/images/avt-blog1.png" alt="img">
                                    </div>
                                    <h3 class="name">
                                        علی نیازی
                                    </h3>
                                </div>

                                <div class="review">
                                    <div class="view">
                                        <span class="icon-view">
                                            <i class="fa fa-eye" aria-hidden="true"></i>
                                        </span>
                                        <span class="count">
                                            631
                                        </span>
                                    </div>
                                    <div class="s-comments">
                                        <span class="icon-cmt">
                                            <i class="fa fa-commenting" aria-hidden="true"></i>
                                        </span>
                                        <span class="count">
                                            82
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>




