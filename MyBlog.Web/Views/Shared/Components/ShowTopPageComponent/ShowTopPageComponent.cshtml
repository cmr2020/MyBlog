@model IEnumerable<MyBlog.Core.DTOs.ShowTopPageViewModel>
    <div class="widget widget-post">
        <h3 class="widgettitle">مقالات محبوب</h3>
        <ul class="LCommerce-posts">
            @foreach (var item in Model)
            {
                <li class="widget-post-item">
                    <div class="thumb-blog">
                        <img src="/PageImages/@item.Imagename" alt="@item.PageTitle" title="@item.PageTitle">
                    </div>
                    <div class="post-content">
                        <div class="cat">
                            <a title="@item.Grouptitle" href="#">@item.Grouptitle</a>
                        </div>
                        <h5 class="post-title"><a href="/News/@item.PageId">@item.PageTitle <span>[...]</span></a></h5>
                    </div>
                </li>
            }

            </ul>
    </div>